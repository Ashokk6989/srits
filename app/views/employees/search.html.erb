<div class="indexcontainer">
<div class="index">
<marquee>Listing employees</marquee>
<%= form_tag employees_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
 
  
  <table border="0" cellspacing="1" cellpadding="1" class="stipe">
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Eamil</th>
      <th>Location</th>
      <th>Mobile</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    
  <% @employees.each do |employee| %>
      <tr>
      <td><%= employee.name %></td>
      <td><%= employee.platform.platform %></td>
      <td><%= employee.eamil %></td>
      <td><%= employee.location %></td>
      <td><%= employee.mobile %></td>
      <td><%= link_to 'Show', employee %></td>
      <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
      <td><%= link_to 'Destroy', employee, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
    <% end %>
  </table>

  <br />
  
  
  
</div> 
<%= render :partial => "/share/right_side"%>

</div>

